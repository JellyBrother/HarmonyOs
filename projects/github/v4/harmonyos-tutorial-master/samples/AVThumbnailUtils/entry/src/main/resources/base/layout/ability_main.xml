<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_image"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Get Image"
        ohos:text_size="40vp"
        />

    <Image
        ohos:id="$+id:image_image"
        ohos:height="match_content"
        ohos:width="match_parent"/>

    <Button
        ohos:id="$+id:button_video"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Get Video"
        ohos:text_size="40vp"
        />

    <Image
        ohos:id="$+id:image_vedio"
        ohos:height="match_content"
        ohos:width="match_parent"/>

</DirectionalLayout>